{
	"compilerOptions": {
		"module": "commonjs",
		"resolveJsonModule": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"target": "es6",
		"noImplicitAny": true,
		"moduleResolution": "node",
		"removeComments": true,
		"sourceMap": false,
		"outDir": "dist",
		"baseUrl": "..",
		"rootDir": "src",
		"paths": {
			"*": ["node_modules/*"]
		},
		"experimentalDecorators": true
	},
	"compileOnSave": true,
	"include": ["src/**/*"],
	"exclude": ["dist"]
}
